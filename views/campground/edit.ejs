<% layout('layout/boilerplate') %>

    <div class="row d-flex justify-content-center">

        <div class="col-6 offest-3">
            <h1 class="text-center">Edit Campground</h1>
            <form action="/campgrounds/<%= foundCampground._id %>?_method=PUT" method="POST" novalidate
                class="validated-form" enctype="multipart/form-data">
                <div class="mb-2">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%= foundCampground.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>


                <div class="mb-2">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%= foundCampground.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="5"
                        required> <%= foundCampground.description %> </textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-2">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control"
                            aria-label="Dollar amount (with dot and two decimal places)" id="price" name="campground[price]"
                            placeholder="0.00" value="<%= foundCampground.price %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="image" name="image" multiple>
                        <label class="input-group-text" for="image">Upload</label>
                    </div>
                </div>

                <div class="mb-3">
                    <% foundCampground.images.forEach(function(img,i){ %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                            <label for="image-<%= i %>">Delete?</label>
                        </div>
                    <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary mt-4">Update Campground</button>
                </div>

            </form>

            <div class="mt-3">
                <a href="/campgrounds/<%= foundCampground._id %>" class="btn btn-success">Back to Campground</a>
            </div>
        </div>
    </div>

