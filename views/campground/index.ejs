<% layout('layout/boilerplate') %>

<div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <div class="row">
        <div class="mb-4">
            <a href="/" class="btn btn-outline-info"> Home </a>
            <a href="/campgrounds/new" class="btn btn-outline-warning"> Add New </a>
        </div>
    </div>

    <% for(let s of show){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(s.images.length){ %>
                        <img crossorigin="anonymous" src="<%= s.images[0].url%>" alt="" class="img-fluid" >
                    <% } else { %>
                        <img crossorigin="anonymous" src="https://res.cloudinary.com/dlurq7obv/image/upload/v1709590135/YelpCamp/doervpg4d0auwlewyzww.jpg" alt="" class="img-fluid">
                    <% } %>
                </div>
                <div class="col md-8">
                    <div class="card-body">
                        <h2 class="card-title">
                            <%= s.title %>
                        </h2>
                        <p class="card-text">
                            <%= s.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= s.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= s._id %>" class="btn btn-primary"> View </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <script> 
            const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
            const campgrounds = {features: <%- JSON.stringify(show) %>}
        </script>

        <script src="/javascript/clusterMap.js"></script>